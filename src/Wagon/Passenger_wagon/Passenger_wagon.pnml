item (FEAT_TRAINS, DTS_Passenger_Car, 2000){
    property {
        name:                           string(STR_DTS_PASS_NAME);
        climates_available:             ALL_CLIMATES;
        introduction_date:              date(1977, 1, 1);
        track_type:                     RAIL;
        sprite_id:                      SPRITE_ID_NEW_TRAIN;

        //spec
        power:                          0 kW;
        weight:                         15 ton;
